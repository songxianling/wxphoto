<style lang="less">
.xh-music-box {
  .music-icon {
    position: fixed;
    top: 30rpx;
    right: 30rpx;
    z-index: 12;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 50%;
    background: mediumvioletred;
    color: tomato;
  }
}
</style>
<template>
  <!-- 音乐组件page -->
  <view class="xh-music-box">
    <form @submit="submit" report-submit='true'>
      <button class="music-icon {{musicRotateClass}}" @tap="handleMusic" form-type="submit">🎵</button>
    </form>
  </view>
</template>
<script>
import wepy from "wepy";
import { wxRequest } from "../utils/wxRequest.js";
export default class XHmusic extends wepy.component {
  props = {
    musicSrc: {
      type: String,
      default: ""
    },
    musicStop: {
      type: Boolean,
      default: false
    }
  };
  data = {
    musicPlay: true,
    musicRotateClass: "rotate-360",
    innerAudioContext: ""
  };

  onLoad() {
    // 音乐
    let that = this;
    that.innerAudioContext = wx.createInnerAudioContext();
    that.innerAudioContext.autoplay = true;
    that.innerAudioContext.loop = true;
    that.innerAudioContext.src = that.musicSrc;
    that.innerAudioContext.onPlay(() => {
      that.musicRotateClass = "rotate-360";
      that.$apply();
    });
    that.innerAudioContext.onPause(() => {
      that.musicRotateClass = "";
      that.$apply();
    });
  }
  watch = {
    musicStop(musicStop) {
      console.log(999);
      this.innerAudioContext.destroy();
    },
    musicSrc(musicSrc) {
      this.innerAudioContext.src = musicSrc;
    }
  };
  methods = {
    handleMusic() {
      let that = this;
      if (that.musicPlay) {
        that.innerAudioContext.pause();
      } else {
        that.innerAudioContext.play();
      }
      that.musicPlay = !that.musicPlay;
    },
    submit(e) {
      wxRequest("/DishMenus/Main2/Public/addFormIds", {
        formIds: e.detail.formId
      }).then(res => {});
    }
  };
}
</script>
